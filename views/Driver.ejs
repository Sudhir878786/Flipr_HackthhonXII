	body {
		margin: 0;
		font-family: Roboto, -apple-system, 'Helvetica Neue', 'Segoe UI', Arial, sans-serif;
		background: #3b4465;
	}
	
	.forms-section {
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
	}
	
	.section-title {
		font-size: 32px;
		letter-spacing: 1px;
