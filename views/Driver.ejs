	.form [type='submit'] {
		opacity: 0;
		display: block;
		min-width: 120px;
		margin: 30px auto 10px;
		font-size: 18px;
		line-height: 40px;
		border-radius: 25px;
		border: none;
		transition: all .3s ease-out;
	}
	
	.form-wrapper.is-active .form [type='submit'] {
		opacity: 1;
		transform: translateX(0);
		transition: all .4s ease-in;
	}
	
	.btn-login {
